<div class="container-md mt-3 p-5">
    <div class="row">
        <div class="col-lg-6">
            <h4 class="mb-3">Your Guide Bookings</h4>
            {{#if orders}}

            <div class="row">
                {{#each orders}}
                <div class="col-12 mb-3">
                    <div class="card single-product-card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="card-side-img">
                                    <!-- Product Thumbnail--><a class="product-thumbnail d-block" href="#!"><img
                                            src="/images/workspace-images/{{this.workspace._id}}.png" alt=""
