                                <div class="card-content px-4 py-2">
                                    <span class="badge bg-primary mb-3">{{this.status}}</span> <br>
                                    <!-- Product Title--><a class="product-title d-block text-truncate mt-0"
                                        href="">{{this.service.title}}</a>
                                    <p class="text-dark">Selected Date : {{this.deliveryDetails.selecteddate}}</p>

                                    <!-- Product Price-->
                                    <p class="">Driver Name : {{this.service.bname}}</p>
                                    <div class="row">
                                        <div class="col-6">
                                            <p class="description mb-1">Appro. Cost : {{this.service.Price}}/-</p>
                                        </div>
                                        <div class="col-6">
                                            <p class="description mb-1">{{this.service.type}}</p>
                                        </div>
                                        <div class="col-6">
                                            <p class="description mb-1">{{this.service.days}}</p>
                                        </div>
                                        <div class="col-6">
                                            <p class="description mb-1">{{this.service.place}}</p>
                                        </div>
                                    </div>


                                    {{!-- <!-- Add To Cart Button--><a class="btn btn-dark"
                                        href="/view-ordered-services/{{this._id}}">
