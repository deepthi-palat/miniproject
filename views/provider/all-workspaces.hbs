<div class="page-content-wrapper main-content">
    <div class="container-md">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mt-3 mb-3">Manage Your Services</h4>
            <a href="/provider/add-workspace" class="btn btn-dark">+ Add New Place and Services</a>
        </div>
        <style>
            .description {
                display: -webkit-box;
                -webkit-line-clamp: 2;
                /* Limit to 2 lines */
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
            }
        </style>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="w-100" id="dataTable">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Image</th>
                                <th data-type="date" data-format="YYYY/DD/MM">Added Date</th>
                                <th>Location</th>
                                <th>Description</th>
                                <th>Other Details</th>
                                <th>Police Station</th>
                                <th>Police Station Number</th>
                                <th>Nearby Hotel</th>
                                <th>Hotel Contact</th>
                                <th>Hospital</th>
                                <th>Hospital Contact</th>
                                <th>Dormitory</th>
                                <th>Dormitory Contact</th>
                                <th>Tourist Spot</th>
                                <th>Tourist Location Link</th>
                                <th>Manage</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each workspaces}}
                            <tr>
                                <td>{{incremented @index}}</td>
                                <td><img src="/images/workspace-images/{{this._id}}.png" alt="" style="width: 5rem">
                                </td>
                                <td>{{this.date}}</td>
                                <td>{{this.place}}</td>
                                <td class="description">{{this.desc}}</td>
                                <td>{{{this.amenities}}}</td>
                                <td>{{this.ps}}</td>
                                <td>{{this.psn}}</td>
                                <td>{{this.hotel}}</td>
                                <td>{{this.hotelnumber}}</td>
                                <td>{{this.hospital}}</td>
                                <td>{{this.hospitalnumber}}</td>
                                <td>{{this.dormitory}}</td>
                                <td>{{this.dormitorynumber}}</td>
                                <td>{{this.touriest}}</td>
                                <td><a href="{{this.location}}" target="_blank">View Location</a></td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="/provider/edit-workspace/{{this._id}}" class="btn btn-dark btn-sm"><i
                                                class="bi bi-pen"></i></a>
                                        <a href="javascript:void(0);"
                                            onclick="deleteWorkspace('{{this._id}}', '{{this.place}}')"
                                            class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function deleteWorkspace(id, wname) {
        Swal.fire({
            title: `Are you sure you want to delete "${wname}"?`,
            text: '',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#33ff68',
            cancelButtonColor: '#d29eee',
            confirmButtonText: 'Yes!',
            cancelButtonText: 'No'
        }).then((result) => {
            if (result.isConfirmed) {
                // Redirect to the delete route if confirmed
                window.location.href = `/builder/delete-workspace/${id}`;
            }
        });
    }
</script>