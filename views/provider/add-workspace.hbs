<div class="page-content-wrapper main-content">
    <div class="container-md">
        <h4 class="mt-3 mb-3">Add Place and Services</h4>
        <form action="/provider/add-workspace" enctype="multipart/form-data" method="POST">
            <input type="hidden" name="date" id="datetime">
            {{#if provider}}
            <input type="hidden" value={{provider.Companyname}} name="bname">
            {{/if}}
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Place Name</label>
                                        <input class="form-control" id="exampleInputText" name="placename" type="text"
                                            placeholder="">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Select District</label>
                                        <select class="form-control" name="place" id="state">
                                            <option value="" selected disabled>Select District</option>
                                            <option value="Thiruvananthapuram">Thiruvananthapuram</option>
                                            <option value="Kollam">Kollam</option>
                                            <option value="Pathanamthitta">Pathanamthitta</option>
                                            <option value="Alappuzha">Alappuzha</option>
                                            <option value="Kottayam">Kottayam</option>
                                            <option value="Idukki">Idukki</option>
                                            <option value="Ernakulam">Ernakulam</option>
                                            <option value="Thrissur">Thrissur</option>
                                            <option value="Palakkad">Palakkad</option>
                                            <option value="Malappuram">Malappuram</option>
                                            <option value="Kozhikode">Kozhikode</option>
                                            <option value="Wayanad">Wayanad</option>
                                            <option value="Kannur">Kannur</option>
                                            <option value="Kasaragod">Kasaragod</option>
                                        </select>
                                    </div>
                                </div>


                            </div>


                            <div class="form-group">
                                <label class="form-label" for="exampleInputText">Image</label>
                                <input class="form-control" id="exampleInputText" name="Image" type="file" required>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="exampleInputText">About Place</label>
                                <textarea class="form-control" id="" name="desc"></textarea>

                            </div>

                            <div class="form-group">
                                <label class="form-label" for="exampleInputText">Other Details</label>
                                <textarea class="form-control" id="editor" name="amenities"></textarea>

                            </div>





                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="mt-3 mb-3">Services</h6>
                            <hr>

                            <div class="row g-1">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Police Station Name</label>
                                        <input class="form-control" id="exampleInputText" name="ps" type="text"
                                            placeholder="">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Police Station
                                            Number</label>
                                        <input class="form-control" id="exampleInputText" name="psn" type="number"
                                            placeholder="">
                                    </div>
                                </div>
                            </div>

                            <div class="row g-1">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Best Restaurent
                                            Name</label>
                                        <input class="form-control" id="exampleInputText" name="hotel" type="text"
                                            placeholder="">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Restaurent Number</label>
                                        <input class="form-control" id="exampleInputText" name="hotelnumber"
                                            type="number" placeholder="">
                                    </div>
                                </div>
                            </div>

                            <div class="row g-1">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Best Hospital Name</label>
                                        <input class="form-control" id="exampleInputText" name="hospital" type="text"
                                            placeholder="">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Hospital Number</label>
                                        <input class="form-control" id="exampleInputText" name="hospitalnumber"
                                            type="number" placeholder="">
                                    </div>
                                </div>
                            </div>


                            <div class="row g-1">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Best Dormitory Name</label>
                                        <input class="form-control" id="exampleInputText" name="dormitory" type="text"
                                            placeholder="">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Dormitory Number</label>
                                        <input class="form-control" id="exampleInputText" name="dormitorynumber"
                                            type="number" placeholder="">
                                    </div>
                                </div>
                            </div>

                            <div class="row g-1">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Best Touriest Name</label>
                                        <input class="form-control" id="exampleInputText" name="touriest" type="text"
                                            placeholder="">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Location</label>
                                        <input class="form-control" id="exampleInputText" name="location" type="text"
                                            placeholder="">
                                    </div>
                                </div>
                            </div>


                        </div>

                    </div>
                </div>

            </div>
            <button type="submit" class="btn btn-dark mt-4 w-25">Submit</button>
        </form>

    </div>
</div>

<script>
    // Get current date and time
    const now = new Date();
    const year = now.getFullYear();
    const month = (now.getMonth() + 1).toString().padStart(2, '0');
    const day = now.getDate().toString().padStart(2, '0');
    const hours = ((now.getHours() + 11) % 12 + 1).toString().padStart(2, '0'); // Convert to 12-hour format
    const minutes = now.getMinutes().toString().padStart(2, '0');
    const ampm = now.getHours() >= 12 ? 'PM' : 'AM';

    // Set default value to current date and time in 12-hour format with AM/PM
    const defaultDateTime = `${year}-${month}-${day}T${hours}:${minutes}`;
    document.getElementById('datetime').value = defaultDateTime;
</script>

<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>