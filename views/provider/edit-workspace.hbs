<div class="page-content-wrapper main-content"> <br> <br>
    <div class="container-md">

        <form action="/provider/edit-workspace/{{workspace._id}}" enctype="multipart/form-data" method="POST">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label class="form-label" for="exampleInputText">Select State</label>
                                <select class="form-control" name="place">
                                    <option value="{{workspace.place}}" selected disabled>{{workspace.place}}</option>
                                    <option value="Thiruvananthapuram">Thiruvananthapuram</option>
                                    <option value="Kollam">Kollam</option>
                                    <option value="Pathanamthitta">Pathanamthitta</option>
                                    <option value="Alappuzha">Alappuzha</option>
                                    <option value="Kottayam">Kottayam</option>
                                    <option value="Idukki">Idukki</option>
                                    <option value="Ernakulam">Ernakulam</option>
                                    <option value="Thrissur">Thrissur</option>
                                    <option value="Palakkad">Palakkad</option>
                                    <option value="Malappuram">Malappuram</option>
                                    <option value="Kozhikode">Kozhikode</option>
                                    <option value="Wayanad">Wayanad</option>
                                    <option value="Kannur">Kannur</option>
                                    <option value="Kasaragod">Kasaragod</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="exampleInputText">Workspace Image</label>
                                <input class="form-control" id="exampleInputText" name="Image" type="file">
                                <img src="/images/workspace-images/{{workspace._id}}.png" alt=""
                                    style="width: 10rem; margin-bottom: 8px;" id="imgView">
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="exampleInputText">About State</label>
                                <textarea class="form-control" id="" name="desc">{{workspace.desc}}</textarea>

                            </div>

                            <div class="form-group">
                                <label class="form-label" for="exampleInputText">Other Details</label>
                                <textarea class="form-control" id="editor"
                                    name="amenities">{{workspace.amenities}}</textarea>

                            </div>



                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="mt-3 mb-3">Services</h6>
                            <hr>

                            <div class="row g-1">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Police Station Name</label>
                                        <input class="form-control" id="exampleInputText" name="ps" type="text"
                                            placeholder="" value="{{workspace.ps}}">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Police Station Number</label>
                                        <input class="form-control" id="exampleInputText" name="psn" type="number"
                                            placeholder="" value="{{workspace.psn}}">
                                    </div>
                                </div>
                            </div>

                            <div class="row g-1">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Best Restaurent Name</label>
                                        <input class="form-control" id="exampleInputText" name="hotel" type="text"
                                            placeholder="" value="{{workspace.hotel}}">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Police Station Number</label>
                                        <input class="form-control" id="exampleInputText" name="hotelnumber"
                                            type="number" placeholder="" value="{{workspace.hotelnumber}}">
                                    </div>
                                </div>
                            </div>

                            <div class="row g-1">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Best Hospital Name</label>
                                        <input class="form-control" id="exampleInputText" name="hospital" type="text"
                                            placeholder="" value="{{workspace.hospital}}">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Hospital Number</label>
                                        <input class="form-control" id="exampleInputText" name="hospitalnumber"
                                            type="number" placeholder="" value="{{workspace.hospitalnumber}}">
                                    </div>
                                </div>
                            </div>


                            <div class="row g-1">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Best Dormitory Name</label>
                                        <input class="form-control" id="exampleInputText" name="dormitory" type="text"
                                            placeholder="" value="{{workspace.dormitory}}">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Dormitory Number</label>
                                        <input class="form-control" id="exampleInputText" name="dormitorynumber"
                                            type="number" placeholder="" value="{{workspace.dormitorynumber}}">
                                    </div>
                                </div>
                            </div>

                            <div class="row g-1">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Best Touriest Name</label>
                                        <input class="form-control" id="exampleInputText" name="touriest" type="text"
                                            placeholder="" value="{{workspace.touriest}}">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="form-label" for="exampleInputText">Location</label>
                                        <input class="form-control" id="exampleInputText" name="location" type="text"
                                            placeholder="" value="{{workspace.location}}">
                                    </div>
                                </div>
                            </div>


                        </div>

                    </div>
                </div>

            </div>
            <button type="submit" class="btn btn-dark mt-4">Update</button>
        </form>
    </div>
</div>

<script>
    function viewImage(event) {
        document.getElementById("imgView").src = URL.createObjectURL(event.target.files[0]);
    }
</script>


<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>